def even_words():
    string2 = string1.split()
    print(string2)
    for word in string2:
        if len(word) % 2 == 0:
            print(f"Even string: {word}")

string1 = input("Enter a string: ")
even_words()


def arith(num1, num2):
    total = num1 + num2
    diff = num1 - num2
    return total, diff



